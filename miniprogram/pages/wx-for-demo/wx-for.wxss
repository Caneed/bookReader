page{
    background-color: #eaeaea;
}
.container {
    margin: 10px 0px;
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    background-color: #fff;
}

.author {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    width: 100%;
}

.author image {
    display: inline-block;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    margin: 5px;
}
.author text {
    height: 40px;
    line-height: 40px;
}

.news-pic{
    width: 100%;
    height: 150px;
}

.news-content{
    display: flex;
    flex-direction: row;
    justify-content: flex-starts;
}
.hot-point{
    width: 50px;
    background-color: #b37373;
    height: 30px;
    line-height: 30px;
    text-align: center;
    color: #fff;
    vertical-align: middle;
    border-radius: 15px;
    margin: 5px;
}
.news-title{
    font-weight: bolder;
    margin: 5px;
}

.news-intro{
    margin: 5px;
    font-weight: lighter;
}

.discuss{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    width: 100%;
}
.discuss view{
    color: #b7b7b7;
}