/* pages/detail/detail.wxss */
.bigTitle{
    height: 150px;
    margin-bottom: 10px;
    position: relative;
    border: 1px solid #e1e1e1;
}
.bigTitle view{
    top: 30px;
    position: absolute;
    left: 15px;
    right: 15px;
}
.bigTitle image{
    width: 40px;
    height: 40px;
    border-radius: 50%;
    position: absolute;
    right: 10px;
    bottom: 10px;
}
.container{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    flex-wrap: wrap;
}
.item{
    width: 90px;
    height: 180px;
    border: 1px solid #e1e1e1;
    display: flex;
    flex-direction: column;
    text-align: center;
    margin-left: 10px;
    margin-bottom: 10px;
}
.item image{
    width: 90px;
    height: 140px;
}
