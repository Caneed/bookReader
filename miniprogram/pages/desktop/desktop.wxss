/* pages/desktop/desktop.wxss */
.btn-container{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    border-bottom: 1px solid #e1e1e1;
    height: 50px;
}
.edit,.close{
    z-index: 2;
    margin: 10px 5px;
    width: 50px;
    height: 30px;
    border: 1px solid #e1e1e1;
    border-radius: 15px;
    text-align: center;
    line-height: 30px;
    position: absolute;
}
.edit{
    right: 10px;
}
.close{
    left: 10px;
}
.book-container{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    width: 95%;
}
.item{
    width: 100px;
    height: 170px;
    margin: 20px;
    border: 1px solid #e1e1e1;
    position: relative;
}
.item image{
    width: 100px;
    height: 120px;
}
.atEdit{
    width: 100px;
    height: 170px;
    position: absolute;
    top: 0px;
    left: 0px;
    background-color: black;
    opacity: 0.5;
}
.delete{
    z-index: 3;
    text-align: center;
    margin: 50px auto;
    color: #f00;
}